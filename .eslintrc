{
  "env": {
    "commonjs": true,
    "es6": true,
    "mocha": true
  },
  "extends": [
    "eslint-config-google",
    "eslint:recommended"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "impliedStrict": true,
    "sourceType": "module"
  },
  "rules": {
    "linebreak-style": 0,
    "semi": 2
  },
  "globals": {
    "mockery": true,
    "sinon": true,
    "expect": true
  }
}
